{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["react", "jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
